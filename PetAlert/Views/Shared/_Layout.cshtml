<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PetAlert</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <img src="~/Content/img/dog-icon.png" width="50" height="50" class="d-inline-block align-top" alt="">
        @Html.ActionLink("PetAlert", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Avis de recherche", "Index", "WantedAd")
                </li>   
                <li class="nav-item">
                    @Html.ActionLink("Animaux errants", "Index", "Animal")
                </li>      
            </ul>
                @Html.Partial("_LoginPartial")
        </div>
    </nav>

     <div class="container body-content">
        @RenderBody()
         <div id="container-footer">
             <div id="footer">
                 <p>&copy; @DateTime.Now.Year - PetAlert</p>
             </div>
             </div>
         </div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
