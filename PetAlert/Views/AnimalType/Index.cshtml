@model IEnumerable<PetAlert.Models.AnimalType>

@{
    ViewBag.Title = "Types d'animaux";
}

<h2>Liste des types d'animaux enregistrés</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Editer", "Edit", new { id = item.AnimalTypeID }, new { @class = "btn btn-warning btn-sm" })
            @Html.ActionLink("Supprimer", "Delete", new { id = item.AnimalTypeID }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

@Html.ActionLink("Ajouter un type d'animal", "Create", null, new { @class = "btn btn-success" })

</table>
